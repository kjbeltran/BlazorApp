@page "/"

<PageTitle>Smart Accounting - Professional Accounting Solutions</PageTitle>

<div class="landing-container">
    <section class="theme-bg position-relative">
        <div class="container">
            <div class="row pt-5 pb-5">
                <div class="col-md-8 mx-auto text-center">
                    <div class="hero-content">
                        <img src="images/smart-accounting-logo.png" alt="Smart Accounting" class="mb-4" style="height: 80px; background-color: #fff; padding: 10px; border-radius: 10px;">
                        <h1 class="text-white mb-4">Smart Accounting Solutions</h1>
                        <p class="text-white mb-5">Professional accounting services for businesses of all sizes</p>
                        <div class="cta-buttons">
                            <a href="auth/register" class="btn btn-primary btn-md waves-effect waves-light mr-3">Get Started</a>
                            <a href="auth/login" class="btn btn-outline-light btn-md waves-effect waves-light">Sign In</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="feature-section bg-white pt-5 pb-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-block text-center">
                            <i class="ti-money text-primary mb-3" style="font-size: 3rem;"></i>
                            <h4 class="card-title">Financial Accounting</h4>
                            <p class="card-text">Comprehensive bookkeeping and financial statement preparation for your business.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-block text-center">
                            <i class="ti-bar-chart text-primary mb-3" style="font-size: 3rem;"></i>
                            <h4 class="card-title">Tax Planning</h4>
                            <p class="card-text">Strategic tax planning and compliance services to minimize your tax burden.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-block text-center">
                            <i class="ti-briefcase text-primary mb-3" style="font-size: 3rem;"></i>
                            <h4 class="card-title">Business Advisory</h4>
                            <p class="card-text">Expert business advice to help your company grow and succeed.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="landing-footer bg-dark text-white pt-4 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; @DateTime.Now.Year Smart Accounting. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-right">
                    <a class="text-white mr-3"><i class="ti-facebook"></i></a>
                    <a class="text-white mr-3"><i class="ti-twitter"></i></a>
                    <a class="text-white"><i class="ti-linkedin"></i></a>
                </div>
            </div>
        </div>
    </footer>
</div>

<style>
    .theme-bg {
        background: linear-gradient(to right, #000000, #333333);
        padding: 79px 0;
        position: relative;
    }
    
    .theme-bg:before {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background: linear-gradient(to right, #d4af37, #f5e08c, #d4af37);
    }
    
    .landing-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
    
    .feature-section {
        flex: 1;
    }
    
    .landing-footer {
        margin-top: auto;
    }
</style>